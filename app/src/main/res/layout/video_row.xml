<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView_PlayerName"
            android:layout_marginEnd="25dp" android:layout_marginRight="25dp" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" android:layout_marginBottom="46dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Player Name"
            android:textSize="16sp"

            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_PlayerName"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
            tools:layout_editor_absoluteY="39dp"/>
    <TextView
            android:text="Brief"
            android:layout_width="184dp"
            android:layout_height="48dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constrainedWidth="true"
            android:id="@+id/textView_Brief"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="34dp" android:layout_marginStart="34dp"
            app:layout_constraintHorizontal_bias="0.0"

            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/textView_PlayerName"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>
